{
  "version": 2,
  "builds": [
    {
      "src": "api/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api/search", "dest": "/api/word" },
    { "src": "/api/tts", "dest": "/api/tts" },
    { "src": "/api/verify", "dest": "/api/verify" },
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/login.html", "dest": "/public/login.html" },
    { "src": "/", "dest": "/public/index.html" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ]
}
