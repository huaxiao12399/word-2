{
  "version": 2,
  "builds": [
    {
      "src": "api/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api/verify", "dest": "/api/verify.js" },
    { "src": "/api/word", "dest": "/api/word.js" },
    { "src": "/api/search", "dest": "/api/word.js" },
    { "src": "/api/tts", "dest": "/api/tts.js" },
    { "src": "/login.html", "dest": "/public/login.html" },
    { "src": "/", "dest": "/public/index.html" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ]
}
